  const { data, category } = Astro.props
  import DressUpImg from "./DressUpImg.astro";
---

    <section>
        <div class="cloth_grid box">
            {
                data.map((item) => {
                    if(item.category === category)
                    return <DressUpImg item={item} />;
                })
            }
        </div>
    </section> 



 
